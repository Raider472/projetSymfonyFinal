{# templates/login/index.html.twig #}
{% extends "accueil.html.twig" %}
{% block titreHeader %}
    <title>Connexion</title>
{% endblock %}
{% block titrePage %}
    <h1 class="titre">Connexion</h1>
{% endblock %}
{% block body %}
    <br class="mt-4 mb-4">
    <div class="d-flex align-items-center h-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-md-8">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('app_login') }}" method="post" class="bg-white rounded shadow-5-strong p-5">
                        <div class="form-outline mb-4" data-mdb-input-init>
                            <label for="username" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
                        </div>

                        <div class="form-outline mb-4" data-mdb-input-init>
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" name="_password">
                        </div>

                        {# If you want to control the URL the user is redirected to on success #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-btn d-flex align-items-center justify-content-center">
                            <button type="submit" class="btn btn-primary btn-block align-items-center" data-mdb-ripple-init>Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
